! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

!scroll
URxvt.keysym.Control-Up: command:\033]720;1\007
URxvt.keysym.Control-Down: command:\033]721;1\007

URxvt.depth: 0
URxvt.saveLines:        8192

!font
Xft.dpi:                96
Xft.antialias:          true
Xft.rgba:               rgb
Xft.hinting:            true
Xft.hintstyle:          hintslight

URxvt.allow_bold:       true                                        
URxvt.font: 			xft:Monospace:style=Regular:size=12
URxvt.letterSpace: 0
URxvt.lineSpace: 2


!cursor
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.cursorBlock: true

!scrollbar
URxvt.scrollBar: false

!padding
URxvt.internalBorder: 22

!copy paste with ctrl shift
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

!disable picture insert mode
URxvt.iso14755: true
URxvt.iso14755_52: false

!extensions
URxvt.perl-ext-common: default,matcher,font-size

!font zoom
URxvt.keysym.Control-Plus:     perl:font-size:increase
URxvt.keysym.Control-Minus:   perl:font-size:decrease

!clickable urls
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

